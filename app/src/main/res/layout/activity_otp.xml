<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_otp"
    android:layout_width="match_parent"
    android:layout_height="914dp"
    android:background="@drawable/container_otp"
    android:gravity="left|top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_removebg_preview"
        android:layout_width="284dp"
        android:layout_height="177dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="31dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_removebg_preview" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="137dp"
        android:layout_marginTop="68dp">

        <TextView
            android:id="@+id/container_text"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="OTP Verification"
            android:textColor="#FF1E232C"
            android:textSize="30dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_username_input"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/container_username_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otp_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/drawable_shape_2"
            android:scaleType="centerCrop"
            android:hint="Enter your OTP"
            android:inputType="number"
            />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_verify_button"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/container_verify_button">

        <ImageView
            android:id="@+id/verify_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/image_rectangle1"
            android:scaleType="centerCrop"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_verify"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="143dp"
            android:layout_marginRight="143dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|top"
            android:includeFontPadding="false"
            android:lineHeight="31.68dp"
            android:text="Verify"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image_vector"
        android:layout_width="19.59dp"
        android:layout_height="5.63dp"
        android:layout_marginLeft="368dp"
        android:layout_marginRight="23.41dp"
        android:layout_marginTop="220dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_vector" />

    <TextView
        android:id="@+id/text_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="104dp"
        android:layout_marginTop="159.37dp"
        android:layout_marginBottom="-23dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Didnâ€™t received code? Resend"
        android:textColor="#FF1E232C"
        android:textSize="15dp" />
</LinearLayout>
